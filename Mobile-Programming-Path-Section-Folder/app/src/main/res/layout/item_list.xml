    app:cardCornerRadius = "10dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding ="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#5F8581"
   >

